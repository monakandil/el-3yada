<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:descendantFocusability="blocksDescendants"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:drawableLeft="@drawable/patient_name_icon"
            style="@style/EditTextStyle"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/patient_list_layout_name"
            android:padding="10dp"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:drawableLeft="@drawable/patient_date_icon"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/patient_list_layout_date"
            android:padding="10dp"
            android:textColor="#cccccc"
            android:textAlignment="center"
            android:layout_below="@+id/patient_list_layout_tel"
            android:layout_toRightOf="@+id/patient_list_layout_time"
            android:layout_toEndOf="@+id/patient_list_layout_time" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:drawableLeft="@drawable/patient_time_icon"
            android:text="Small Text"
            android:id="@+id/patient_list_layout_time"
            android:padding="10dp"
            android:textColor="#cccccc"
            android:textAlignment="center"
            android:layout_alignTop="@+id/patient_list_layout_date"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            style="@style/EditTextStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/patient_tel_icon"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:clickable="false"
            android:focusable="false"
            android:text="Medium Text"
            android:id="@+id/patient_list_layout_tel"
            android:padding="10dp"
            android:textAlignment="center"
            android:layout_below="@+id/patient_list_layout_name"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="#ffffff" />
    </RelativeLayout>
