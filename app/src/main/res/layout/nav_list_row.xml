<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/icons">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/browse_all"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/list_icon"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Namfkfmklcx;lm"
        android:id="@+id/list_label"
        android:layout_alignParentRight="true"
        android:textColor="@color/primary_text"
        android:padding="9dp"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:textSize="10pt"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/list_icon"
        android:layout_toEndOf="@+id/list_icon"
        android:layout_alignTop="@+id/list_icon"
        android:layout_alignBottom="@+id/list_icon" />

</RelativeLayout>